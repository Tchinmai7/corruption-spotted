<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    tools:context=".CameraPhotoCapture" >
    
    <Button android:text="Capture Photo"
            android:id="@+id/photo"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/button5"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button5" />
    
    <TextView
        android:id="@+id/message"
        android:layout_below="@+id/photo"
        android:text="Click on button to capture image"
        android:textSize="14dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        />
    
    <TextView
        android:id="@+id/imageDetails"
        android:layout_below="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:id="@+id/showImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/imageDetails"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/button5"
        android:background="@drawable/round"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/select"
        android:layout_alignEnd="@+id/select" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select from gallery"
        android:id="@+id/select"
        android:background="@drawable/round"
        android:layout_below="@+id/photo"
        android:layout_toRightOf="@+id/message"
        android:layout_toEndOf="@+id/message" />


</RelativeLayout>