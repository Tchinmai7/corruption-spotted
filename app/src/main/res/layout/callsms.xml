
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"

        android:background="#000000"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/relative"
        tools:context="com.example.aarthi.anti_corruption.choice$PlaceholderFragment">
 <android.support.v7.widget.CardView
     android:layout_marginTop="200dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:id="@+id/card1">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Commisioner of Police"
android:id="@+id/number1"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_action_call"
        android:layout_toRightOf="@id/number1"
        android:id="@+id/call"

        />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_action_send_now"
            android:layout_toRightOf="@id/call"
            android:id="@+id/smssend"/>
    </RelativeLayout>
     </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card1"
            android:id="@+id/card2"
           >
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">
         <TextView
             android:layout_width="180dp"
             android:layout_height="wrap_content"
             android:text="DGP"
             android:id="@+id/number2"
             />
         <Button
             android:layout_width="40dp"
             android:layout_height="wrap_content"
             android:background="@mipmap/ic_action_call"
             android:layout_toRightOf="@id/number2"
             android:id="@+id/call2"

             />
         <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@mipmap/ic_action_send_now"
             android:layout_toRightOf="@id/call2"
             android:id="@+id/smssend2"/>
     </RelativeLayout>
</android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card2">
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">
         <TextView
             android:layout_width="180dp"
             android:layout_height="wrap_content"
             android:text="anti-corruption helpline"
             android:id="@+id/number3"
             />
         <Button
             android:layout_width="40dp"
             android:layout_height="wrap_content"
             android:background="@mipmap/ic_action_call"
             android:layout_toRightOf="@id/number3"
             android:id="@+id/call3"

             />
         <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@mipmap/ic_action_send_now"
             android:layout_toRightOf="@id/call3"
             android:id="@+id/smssend3"/>
     </RelativeLayout>
</android.support.v7.widget.CardView>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/fblink"
            android:background="@drawable/fb"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/card1"
            android:layout_alignEnd="@+id/card1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click on the link to go in and post in our fb page : "
            android:id="@+id/textView"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/fblink"
            android:layout_alignBottom="@+id/fblink"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

